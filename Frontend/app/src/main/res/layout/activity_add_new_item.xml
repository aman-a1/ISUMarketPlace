<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FBAD3E"
        android:text="Add New Item"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />
    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/IdProfADD"
            android:layout_width="252dp"
            android:layout_height="237dp"
            android:background="@drawable/image_view"
            android:contentDescription="@string/profile"
            android:paddingTop="10dp"
            android:src="@drawable/add_item" />
    </LinearLayout>

    <EditText
        android:id="@+id/titleADD"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_button_white"
        android:gravity="center_horizontal"
        android:hint="Tile Box"
        android:padding="4dp"
        android:inputType="text"
        android:textColorHint="#FBAD3E"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/desADD"
        android:layout_width="354dp"
        android:layout_height="146dp"
        android:layout_marginTop="15dp"
        android:hint="Enter the description of the item ...."
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColorHint="#FBAD3E"
        android:inputType="textLongMessage|textMultiLine"
        android:background="@drawable/custom_button_white"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/priceADD"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button_white"
        android:ems="10"
        android:inputType="number"
        android:hint="Price ($)"
        android:textColorHint="#FBAD3E"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submitADD"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"/>
</LinearLayout>
