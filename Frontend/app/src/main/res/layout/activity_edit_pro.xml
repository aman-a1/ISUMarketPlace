<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT PROFILE"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/profileImage"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/profile"/>
        </LinearLayout>

        <Button
            android:id="@+id/button1234"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_arrow_back_24"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="345dp"
            android:id="@+id/submit"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_done_24"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="238dp"
            android:id="@+id/updateImg"
            android:layout_marginTop="65dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_baseline_edit_24"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRST NAME"
            android:textColor="#000000"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="305dp">

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:id="@+id/editFirst"
            android:layout_marginLeft="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST NAME"
            android:textColor="#000000"
            android:layout_marginTop="425dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="305dp">

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/editLast"
            android:layout_marginTop="147dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>